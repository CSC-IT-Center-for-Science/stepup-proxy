<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow.xsd">

	<!-- THIS IS A EARLY DRAFT, NOT TO BE USED!! -->

	<action-state id="AttachOidcAuthenticationRequest">
		<evaluate expression="AttachOidcAuthenticationRequest" />
		<transition on="ContinueOidc"
			to="VerifyClientRedirectUriOfOidcAuthenticationRequest" />
		<transition on="ErroOidc" to="proceed">
			<evaluate expression="RespondOidcMFARequest" />
		</transition>
		<!-- <transition to="DisplayCondolences" /> -->
	</action-state>

	<action-state id="VerifyClientRedirectUriOfOidcAuthenticationRequest">
		<evaluate expression="VerifyClientRedirectUriOfOidcAuthenticationRequest" />
		<transition on="ContinueOidc"
			to="ValidateRequestObjectOfOidcAuthenticationRequest" />
		<transition on="ErroOidc" to="proceed">
			<evaluate expression="RespondOidcMFARequest" />
		</transition>
		<!-- <transition to="DisplayCondolences" /> -->
	</action-state>


	<action-state id="ValidateRequestObjectOfOidcAuthenticationRequest">
		<evaluate expression="ValidateRequestObjectOfOidcAuthenticationRequest" />
		<transition on="ContinueOidc" to="BuildShibbolethContexts" />
		<transition on="ErroOidc" to="proceed">
			<evaluate expression="RespondOidcMFARequest" />
		</transition>
		<!-- <transition to="DisplayCondolences" /> -->
	</action-state>

	<action-state id="BuildShibbolethContexts">
		<evaluate expression="BuildShibbolethContexts" />
		<transition on="ContinueOidc" to="Stepup" />
		<transition on="ErroOidc" to="proceed">
			<evaluate expression="RespondOidcMFARequest" />
		</transition>
		<!-- <transition to="DisplayCondolences" /> -->
	</action-state>

	<subflow-state id="Stepup" subflow="authn/mfa">
		<input name="calledAsSubflow" value="true" />
		<transition to="proceed">
			<evaluate expression="RespondOidcMFARequest" />
		</transition>
	</subflow-state>


	<end-state id="proceed" view="externalRedirect:#{flowScope.redirect}">
	</end-state>


	<bean-import resource="mfarequest-beans.xml" />

</flow>
