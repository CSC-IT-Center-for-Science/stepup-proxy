<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow.xsd">

	<!-- THIS IS A EARLY DRAFT, NOT TO BE USED!! -->

	<action-state id="ProcessIncomingOidc">
		<evaluate expression="ProcessOidcStepUpRequest" />
		<transition to="Stepup" />
	</action-state>

	<subflow-state id="Stepup" subflow="authn/mfa">
		<input name="calledAsSubflow" value="true" />
		<transition to="proceed">
			<evaluate expression="RespondOidcStepUpRequest" />
		</transition>
	</subflow-state>


	<end-state id="proceed" view="externalRedirect:#{flowScope.redirect}">
	</end-state>

	<bean-import resource="mfarequest-beans.xml" />

</flow>
